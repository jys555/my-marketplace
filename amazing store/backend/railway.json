{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "watchPatterns": [
      "**/*.js",
      "**/*.json",
      "package.json",
      "package-lock.json",
      "../database/migrations/**",
      "../../database/migrations/**",
      "../database/migrate.js",
      "../../database/migrate.js"
    ]
  }
}

