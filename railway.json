{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "watchPatterns": [
      "amazing store/backend/**",
      "seller-app/backend/**",
      "database/migrations/**",
      "database/migrate.js"
    ]
  }
}

